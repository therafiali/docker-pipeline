# Dockerfile for Vite React App
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy and install dependencies
COPY package*.json ./
RUN npm install

# Copy app files
COPY . .

# Expose port (Vite dev or use static serve for prod)
EXPOSE 5173

# Run the dev server on 0.0.0.0 so it's externally accessible
CMD ["npm", "run", "dev", "--", "--host"]
